{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "ngx-lib": {
            "projectType": "library",
            "root": "projects/ngx-lib",
            "sourceRoot": "projects/ngx-lib/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "projects/ngx-lib/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/ngx-lib/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "projects/ngx-lib/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/ngx-lib/src/test.ts",
                        "tsConfig": "projects/ngx-lib/tsconfig.spec.json",
                        "karmaConfig": "projects/ngx-lib/karma.conf.js"
                    }
                }
            }
        },
        "ngx-button": {
            "projectType": "library",
            "root": "projects/ngx-button",
            "sourceRoot": "projects/ngx-button/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "projects/ngx-button/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/ngx-button/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "projects/ngx-button/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "tsConfig": "projects/ngx-button/tsconfig.spec.json",
                        "polyfills": ["zone.js", "zone.js/testing"]
                    }
                }
            }
        }
    },
    "cli": {
        "analytics": false
    }
}
